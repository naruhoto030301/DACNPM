@model DACNPM.Models.User
@{
    ViewData["Title"] = "Log In";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<p>abc abc</p>

<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
            <div class="card-body">
                <form asp-controller="Auth" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">

                        <div class="form-floating">
                            <input class="form-control" type="email" placeholder="name@example.com" asp-for="Email" />
                            <label asp-for="Email"></label>
                        </div>
                        <span asp-validation-for="Email" class="text-danger mb-3"></span>
                    </div>
                    <div class="form-group mb-3">

                        <div class="form-floating">
                            <input class="form-control" type="password" placeholder="Password" asp-for="Password" />
                            <label asp-for="Password"></label>
                        </div>
                        <span asp-validation-for="Password" class="text-danger mb-3"></span>
                        <span  class="text-danger mb-3">@TempData["ErrorMessage"]</span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                        <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <a class="small" href="#">Forgot Password?</a>
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <div class="small"><p>Need an account?</p><a asp-controller="Auth" asp-action="SignUp" class="btn btn-secondary"> Sign up!</a></div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}