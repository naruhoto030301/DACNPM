@model DACNPM.Models.Product

@{
    ViewData["Title"] = "Products Details";
}

<div class="card mb-4 mt-5">
    <div class="card-header">
        <i class="fas fa-shopping-cart"></i>
        <strong>@ViewBag.Title</strong>
    </div>
    <div class="card-body">

        <div class="row">
            <div class="col-md-12 offset-1">
                <div class="row g-3">
                    <div class="col-md-5">
                        <div class="form-group mb-3">
                            <label asp-for="ProductName" class="control-label"></label>
                            <input asp-for="ProductName" class="form-control" readonly />

                        </div>
                        <div class="row">
                            <div class="col-md-6">

                                <div class="form-group mb-3">
                                    <label asp-for="Price" class="control-label"></label>
                                    <input asp-for="Price" class="form-control" readonly />

                                </div>
                            </div>
                            <div class="col-md-6">

                                <div class="form-group mb-3">
                                    <label asp-for="Stock" class="control-label"></label>
                                    <input asp-for="Stock" class="form-control" readonly />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">

                                <div class="form-group mb-3">
                                    <label asp-for="Category!.CategoryName" class="control-label"></label>
                                    <input class="form-control" value="@Model.Category!.CategoryName" readonly />

                                </div>
                            </div>
                            <div class="col-md-6">

                                <div class="form-group mb-3">
                                    <label asp-for="ProductType!.Type" class="control-label"></label>
                                    <input class="form-control" value="@Model.ProductType!.Type" readonly />

                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea class="form-control" asp-for="Description" rows="3" readonly></textarea>
                        </div>
                        <div class="form-group">
                            <a class="btn btn-secondary" asp-controller="Products" asp-action="Index">Show All</a>
                            <a class="btn btn-danger float-end" asp-controller="Products" asp-action="Delete" asp-route-id="@Model.ProductID">Delete</a>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group mb-3">
                            @{
                                var datetime = Model.CreatedAt.ToString();
                            }
                            <label asp-for="CreatedAt" class="control-label"></label>
                            <input type="text" class="form-control" readonly value="@datetime" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductImageURL" class="control-label"></label>
                            <input asp-for="ProductImageURL" class="form-control" readonly />
                        </div>
                        <div class="form-group text-center">
                            <img id="ProductImagePreview" style="max-width: 250px" />
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProductImagePreview');
            output.src = $("#ProductImageURL").val();
        })
        $("#ProductImageURL").on("change", function () {
            var output = document.getElementById('ProductImagePreview');
            output.src = $(this).val();
        })
    </script>
}