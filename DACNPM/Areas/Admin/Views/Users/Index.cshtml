@model IEnumerable<DACNPM.Models.User>

@{
    ViewData["Title"] = "Users";

}

<div class="section mt-5">
    <div class="container">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-user"></i>
                @ViewBag.Title
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th class="text-center">Full Name</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.Email)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.FullAddress)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.Role!.RoleName)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center">Full Name</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.Email)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.FullAddress)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.Role!.RoleName)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var fullName = item.FirstName + " " + item.LastName;
                            var email = item.Email.ToString();
                            <tr class="text-center">
                                <td class="align-middle">@fullName</td>
                                <td class="align-middle">@email</td>
                                <td class="align-middle">@Html.DisplayFor(model => item.FullAddress)</td>
                                <td class="align-middle">@Html.DisplayFor(model => item.Role!.RoleName)</td>

                                <td class="align-middle">

                                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.UserID"><i class="fas fa-eye"></i></a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UserID"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
