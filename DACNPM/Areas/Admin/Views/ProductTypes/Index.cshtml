@model IEnumerable<DACNPM.Models.ProductType>

@{
    ViewData["Title"] = "Product Types";
}

<div class="section mt-5">
    <div class="container">

        <p>
            <a class="btn btn-success" asp-action="Create">Create new Product Type</a>
        </p>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                <strong>@ViewBag.Title</strong>
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th class="text-center">@Html.DisplayNameFor(model => model.TypeID)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.Type)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center">@Html.DisplayNameFor(model => model.TypeID)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.Type)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr class="text-center">
                                <td class="align-middle">@Html.DisplayFor(model => item.TypeID)</td>
                                <td class="align-middle">@Html.DisplayFor(model => item.Type)</td>
                                <td class="align-middle">
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.TypeID"><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TypeID"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

